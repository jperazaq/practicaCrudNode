<%- include ('partials/_header')%>

<div class="container">
  <div class="row">
    <!-- formulario -->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="title"
                id="title"
                placeholder="Inserte un Titulo"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <textarea
                name="description"
                id="description"
                cols="80"
                class="form-control"
                placeholder="Inserte una Descripcion"
              ></textarea>
            </div>
            <button
              type="submit"
              name="button"
              class="btn btn-primary btn-block">
              Crear Tarea
            </button>
          </form>
        </div>
      </div>
    </div>
    <!-- lista de datos -->

    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N Tarea</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Acciones</th>
          </tr>
        </thead>

        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
<%- include ('partials/_footer')%>
