<%- include ('partials/_header')%>





<div class="container">
  
  <div class="row">
    <!-- formulario -->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input
                type="text"
                name="title"
                id="title"
                placeholder="Inserte un Titulo"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <textarea
                name="description"
                id="description"
                cols="80"
                class="form-control"
                placeholder="Inserte una Descripcion"
              ></textarea>
            </div>
            <button
              type="submit"
              
              class="btn btn-primary btn-block">
              Crear Tarea
            </button>
          </form>
        </div>
      </div>
    </div>
    <!-- lista de datos -->

    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N Tarea</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Acciones</th>
          </tr>
        </thead>

        <tbody>
          
          <% for(var i = 0; i<tasks.length; i++){ %> 
            <tr>
              <td><%=  i+1%></td>
              <td><%= tasks[i].title%></td>
              <td><%= tasks[i].description%></td>
              <td>
                <a href="/done/<%= tasks[i]._id%>" class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark'%>"><%= tasks[i].status ? "Done": "Pending"%></a>
                <a href="/edit/<%= tasks[i]._id%>" class="btn btn-info">Edit</a>
                <a href="/delete/<%= tasks[i]._id%>" class="btn btn-danger">Delete</a>

              </td>
            </tr>
         <% }%>
          
            >
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include ('partials/_footer')%>

