<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node Task Manager</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark mb-4">
      <a href="/" class="navbar-brand">CRUD MONGO</a>
    </nav>

<div class="container">
  <div class="row">
    <!-- formulario -->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input
                type="text"
                name="title"
                id="title"
                placeholder="Inserte un Titulo"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <textarea
                name="description"
                id="description"
                cols="80"
                class="form-control"
                placeholder="Inserte una Descripcion"
              ></textarea>
            </div>
            <button
              type="submit"
              name="button"
              class="btn btn-primary btn-block">
              Crear Tarea
            </button>
          </form>
        </div>
      </div>
    </div>
    <!-- lista de datos -->

    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N Tarea</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Acciones</th>
          </tr>
        </thead>

        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
<!-- <%- include ('partials/_footer')%> -->
</body>
</html>
